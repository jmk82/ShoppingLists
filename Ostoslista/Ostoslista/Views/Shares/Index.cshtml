@model IEnumerable<Ostoslista.Models.ShoppingList>

@{
    ViewBag.Title = "Jaetut listat";
}

@if (Model.Count() == 0)
{
    <h3>Ei sinulle jaettuja ostoslistoja</h3>
} else
{
    <h3>Sinulle jaetut ostoslistat:</h3>
}

<ul class="list-group">
    @foreach (var list in Model)
    {
        <li class="list-group-item">
            <a href="@Url.Action("ViewShared", "ShoppingLists", new { id = list.Id })">@list.Name</a>
        </li>
    }
</ul>